<div class="mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>All Posts</h1>
        <%= link_to 'New Post', new_post_path, class: 'btn btn-primary'%>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Content</th>
                <th>Created At</th>
                <th colspan="3"></th>
            </tr>
        </thead>
        <tbody>
            <% @posts.each do |post| %>
                <tr>
                    <td><%= post.title %></td>
                    <td><%= truncate(post.content, length: 100) %></td>
                    <td><%= post.created_at.strftime("%Y-%m-%d") %></td>
                    <td class="td"><%= link_to 'Show', post_path(post), class: 'btn-sm btn-secondary' %></td> | 
                    <td class="td"><%= link_to 'Edit', edit_post_path(post), class: 'btn-sm btn-success' %></td> | 
                    <td class="td"><%= link_to 'Destroy', post_path(post), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn-sm btn-danger' %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>

<br>

