<h1>New Post</h1>

<%= form_with(model: @post, local: true) do |form| %>
    <div class="forr-group w-25">
        <%= form.label :title, class: 'form-label' %><br>
        <%= form.text_field :title, required: true, class: 'form-control'%>
    </div>

    <div class="form-group mt-2 w-50">
        <%= form.label :content, class: 'form-label'  %><br>
        <%= form.text_area :content, required: true, class: 'form-control' %>
    </div>

    <div>
        <%= form.submit "Create Post", class: 'btn btn-secondary mt-2' %>
    </div>
<% end %>

<%= link_to 'Back', posts_path, class: 'btn btn-primary mt-4' %>
